<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="..........."
        android:id="@+id/tv_location"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am here!"
        android:id="@+id/btn_showmyloc"
        android:layout_below="@+id/tv_location"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial Mr. Hafez"
        android:id="@+id/btn_dialmrhafez"
        android:layout_below="@+id/btn_showmyloc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Mr. Hafez"
        android:id="@+id/btn_sms"
        android:layout_alignTop="@+id/btn_dialmrhafez"
        android:layout_toEndOf="@+id/btn_dialmrhafez" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:id="@+id/btn_camera"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Video"
        android:id="@+id/btn_video"
        android:layout_alignTop="@+id/btn_camera"
        android:layout_toEndOf="@+id/btn_dialmrhafez" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Contacts"
        android:id="@+id/btn_contacts"
        android:layout_below="@+id/btn_camera"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open IPA Site"
        android:id="@+id/btn_site"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Directions to Airport"
        android:id="@+id/btn_directions"
        android:layout_alignTop="@+id/btn_showmyloc"
        android:layout_toEndOf="@+id/btn_contacts" />
</RelativeLayout>
